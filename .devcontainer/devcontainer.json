{
  "name": "Common Lisp (SBCL via clfoundation)",
  "image": "clfoundation/sbcl:2.5.11-rc-trixie",
  "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",
  "postCreateCommand": "bash .devcontainer/install-quicklisp.sh",
  "containerEnv": {
    "CL_SOURCE_REGISTRY": "/workspaces//"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "qingpeng.common-lisp",
        "editorconfig.editorconfig",
        "yzhang.markdown-all-in-one"
      ],
      "settings": {
        "editor.tabSize": 2,
        "[lisp]": {
          "editor.tabSize": 2
        }
      }
    }
  },

  "forwardPorts": [4005]
}
